{% extends 'base.html.twig' %}

{% block body %}
<style>
    #login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f4f7fc;
        font-family: Arial, sans-serif;
    }

    form {
        background-color: #fff;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    form label {
        font-size: 16px;
        font-weight: bold;
        color: #333;
    }

    form input {
        width: 90%;
        padding: 12px;
        margin-top: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        background-color: #fafafa;
        color: #333;
        transition: all 0.3s ease;
    }

    form input:focus {
        border-color: #4CAF50;
        background-color: #fff;
    }

    form button {
        width: 100%;
        padding: 12px;
        background-color: #4CAF50;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        font-weight: bold;
        color: white;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    form button:hover {
        background-color: #45a049;
    }

    div {
        color: red;
        font-size: 14px;
        margin-bottom: 15px;
    }

    a {
        text-decoration: none;
        font-size: 16px;
        color: #007BB5;
        font-weight: bold;
        text-align: center;
        display: block;
        margin-top: 20px;
    }

    a:hover {
        color: #005f85;
    }
</style>

<div id="login-container">
    <form action="{{ path('app_login') }}" method="post">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Email Address" required>
        
        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" placeholder="Password" required>
        
        <button type="submit">Login</button>
    </form>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{ path('logout') }}">Logout</a>
    {% endif %}
</div>

{% endblock %}
